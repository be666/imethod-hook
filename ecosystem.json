{
  "apps": [
    {
      "name": "imethod-hook",
      "script": "server/server.js",
      "node_args": "--harmony",
      "watch": false,
      "ignore_watch": [
        ".idea",
        ".git",
        "node_modules",
        "server/resource",
        "json",
        "client"
      ],
      "next_gen_js": true,
      "env_bcaring": {
        "NODE_ENV": "bcaring"
      }
    }
  ],
  "deploy": {
    "bcaring": {
      "user": "root",
      "host": "bcaring.cn",
      "ref": "origin/master",
      "repo": "git@github.com:imethod/imethod-hook.git",
      "path": "/var/www/imethod-hook",
      "post-deploy": "npm install;pm2 startOrRestart ecosystem.json --env bcaring"
    }
  }
}
